{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "dist", "prisma", "src/archives"],
  "include": ["src/**/*", "prisma/*.ts", "prisma/seed/seed-dev.ts"]
}
