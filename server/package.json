{
  "name": "server",
  "version": "1.0.0",
  "description": "Jira clone project using a PERN stack with TypeScript",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint",
    "db:push:test": "dotenv -e .env.test -- npx prisma db push",
    "test": "npm run db:push:test && cross-env NODE_ENV=test dotenv -e .env.test -- jest",
    "build": "tsc",
    "watch-ts": "tsc --watch",
    "start": "nodemon dist/index.js",
    "dev": "concurrently \"npm:watch-ts\" \"npm:start\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "author": "Raphael Dozzi",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "jest": "^30.0.2",
    "nodemon": "^3.1.7",
    "prettier": "3.4.2",
    "prisma": "^6.0.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.17.0"
  },
  "dependencies": {
    "@ant-design/icons": "^5.5.2",
    "@prisma/client": "^6.0.1",
    "@types/archiver": "^6.0.3",
    "@types/multer": "^1.4.12",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.13.1"
  }
}
